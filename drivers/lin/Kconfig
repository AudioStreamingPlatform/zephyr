# LIN driver configuration options

# SPDX-License-Identifier: Apache-2.0

menuconfig LIN
    bool "LIN Drivers"
    help
      Enable LIN Driver Configuration

if LIN

module = LIN
module-str = lin
source "subsys/logging/Kconfig.template.log_config"

config LIN_SHELL
	bool "LIN Shell"
	depends on SHELL
	help
	  Enable LIN Shell.

	  The LIN shell supports reading and writing (update me)

config LIN_INIT_PRIORITY
  int "LIN driver init priority"
  default KERNEL_INIT_PRIORITY_DEVICE
  help
    LIN driver device initialization priority.

source "drivers/lin/Kconfig.mspm0"

source "drivers/lin/Kconfig.uart"

endif # LIN
